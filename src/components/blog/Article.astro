---
function formatedDate(pubDate: Date, arg1: string): unknown {
  throw new Error("Function not implemented.");
}

import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  data: CollectionEntry<"blog">["data"];
  slug: string;
}

const { data, slug } = Astro.props;
---

<li
  class="border-extra-soft-white text-soft-white hover:bg-soft-light rounded-xl border transition-colors duration-200"
>
  <div transition:name={data.title} >
    <article>
      <a href=`/blog/${slug}`>
        <Image
          src={data.heroImage}
          alt=""
          width={1020}
          height={520}
          class="aspect-[16/5] rounded-t-xl object-cover"
        />
        <div class="w-full">
          <div class="flex flex-col px-12 py-4">
            <h4 class="text-3xl font-bold">{data.title}</h4>
            <div class="flex gap-2">
              {
                data.tags.map((t) => (
                  <span class="border-extra-soft-white mt-4 self-start rounded border px-2 py-1 text-zinc-400">
                    {t}
                  </span>
                ))
              }
            </div>
            <p class="mt-6 text-sm text-zinc-400">
              {formatedDate(data.pubDate, "cl-CL")}
            </p>
          </div>
        </div>
      </a>
    </article>
  </div>
</li>
